<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.simple.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.simple.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.simple.connecthost" var="host" desckey="gateway.web.transports.host" default="localhost"/>
        <item type="text" sysprop="plugin.gateway.simple.connectport" var="port" desckey="gateway.web.transports.port" default="5060"/>
    </rightpanel>
</optionsconfig>
