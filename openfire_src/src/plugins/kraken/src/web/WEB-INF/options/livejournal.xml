<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.livejournal.avatars" var="avatars" desckey="gateway.web.transports.buddyicons" default="true"/>
        <item type="toggle" sysprop="plugin.gateway.livejournal.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.livejournal.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.livejournal.connecthost" var="host" desckey="gateway.web.transports.host" default="xmpp.services.livejournal.com"/>
        <item type="text" sysprop="plugin.gateway.livejournal.connectport" var="port" desckey="gateway.web.transports.port" default="5222"/>
    </rightpanel>
</optionsconfig>
