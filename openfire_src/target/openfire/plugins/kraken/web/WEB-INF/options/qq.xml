<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
  <leftpanel>
    <item type="toggle" sysprop="plugin.gateway.qq.avatars" var="avatars" desckey="gateway.web.transports.buddyicons" default="true"/>
    <item type="toggle" sysprop="plugin.gateway.qq.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
      <item type="text" sysprop="plugin.gateway.qq.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="10" size="5" maxlength="5"/>
    </item>
  </leftpanel>
  <rightpanel>
    <item type="text" sysprop="plugin.gateway.qq.connecthost" var="host" desckey="gateway.web.transports.host" default="tcpconn.tencent.com"/>
    <item type="text" sysprop="plugin.gateway.qq.connectport" var="port" desckey="gateway.web.transports.port" default="8000"/>
    <item type="text" sysprop="plugin.gateway.qq.defaultRosterName" var="defaultRosterName" desckey="gateway.qq.web.defaultQQRosterName" default="Friends"/>
    <item type="text" sysprop="plugin.gateway.qq.qqGroupName" var="qqGroupName" desckey="gateway.qq.web.qqGroupName" default="QQ Group"/>
  </rightpanel>
</optionsconfig>
