<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.facebook.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.facebook.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.facebook.connecthost" var="host" desckey="gateway.web.transports.host" default="chat.facebook.com"/>
        <item type="text" sysprop="plugin.gateway.facebook.connectport" var="port" desckey="gateway.web.transports.port" default="5222"/>
    </rightpanel>
    <bottompanel>
        <item type="text" sysprop="plugin.gateway.facebook.platform.apikey" var="apikey" desckey="gateway.facebook.apikey" default=""/>
        <item type="text" sysprop="plugin.gateway.facebook.platform.apisecret" var="apisecret" desckey="gateway.facebook.apisecret" default=""/>
    </bottompanel>
</optionsconfig>
